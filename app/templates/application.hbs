<div class="container-fluid">
  {{#if session.isAuthenticated}}
  <div class="profile-info">
    {{session.currentUser.displayName}}
    <img src={{photoUrl}} class="profile" {{action "signOut"}}>
  </div>

  {{#if isHome}}
    <div class="col-md-12">
      <label>Title: {{input value=title class="form-control" placeholder="Gantt name"}}</label>
        <button {{action "createGantt"}} class="btn btn-primary">Create</button>
    </div>
    {{#each model as |gantt|}}
      {{#link-to "gantts.view" gantt.id}}{{gantt.title}}{{/link-to}}
    {{/each}}
  {{/if}}

<div class="col-md-12">
</div>
  {{outlet}}
{{else}}
  <button {{action "signIn" "facebook"}}>Sign in with Facebook</button>
  <button {{action "signIn" "github"}}>Sign in with Github</button>
{{/if}}
</div>
